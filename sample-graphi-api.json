{
  "version": "2018.3.30",
  "model": {
    "Post": {
      "id": {
        "type": "number"
      },
      "title": {
        "type": "string",
        "nullable": false,
        "size": [
          2,
          128
        ]
      },
      "body": {
        "type": "string"
      },
      "publishedDate": {
        "type": "string",
        "dateFormat": "dd/MMM/yyyy hh:mm"
      },
      "author": "#Author"
    },
    "Author": {
      "id": {"type": "number"},
      "firstName": {"type": "string", "size": [2, 128]},
      "lastName": {"type": "string", "size": [2, 128]}
    }
  },
  "command": {
    "getPost": {
      "params": {
        "id": {"type": "number", "nullable": false}
      },
      "result": "#Post"
    },
    "findPostByAuthor": {
      "params": {
        "authorId": {"type": "number", "nullable": false}
      },
      "result": "#Post"
    },
    "findAuthorByPost": {
      "postId": "#Post.id",
      "postTitle": "#Post.title"
    }
  }
}
