{
  "createCategoryThenPost": {
    "category: saveCategory": {
      "args": {
        "newCategoryParams": "$categoryParams"
      },
      "then": {
        "post: savePost": {
          "args": {
            "newPostParams": {
              "@extend": "$postParams",
              "categoryId": "$category.id"
            }
          }
        }
      }
    }
  }
}
